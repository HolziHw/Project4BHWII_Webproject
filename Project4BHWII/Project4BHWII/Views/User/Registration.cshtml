@model Project4BHWII.Models.User

<script>
    document.getElementById("HeaderText").innerHTML = "";
    document.getElementById("HeaderSubTitle").innerHTML = "";
    document.getElementById("HeaderPic").style.backgroundImage = "url('../../Media/Pictures/Eu4banner_2.jfif')";
</script>
@using (Html.BeginForm())
{
   <p>
        @Html.ValidationSummary()
    </p>
    <div align="center">
        <table>
            <thead>
                <tr>
                    <td colspan="2">Registrierungsdaten</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.LabelFor(u => u.Firstname, "Vorname:* ")</td>
                    <td>@Html.TextBoxFor(u => u.Firstname)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(u => u.Lastname, "Nachname:* ")</td>
                    <td>@Html.TextBoxFor(u => u.Lastname, new { required = "required" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(u => u.Gender, "Geschlecht: ")</td>
                    <td>@Html.EnumDropDownListFor(u => u.Gender, new { required = "required" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(u => u.Birthdate, "Geburtsdatum: ")</td>
                    <td>@Html.TextBoxFor(u => u.Birthdate, new { type = "date" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(u => u.Username, "Username:* ")</td>
                    <td>@Html.TextBoxFor(u => u.Username, new { required = "required" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(u => u.Password, "Passwort:* ")</td>
                    <td>@Html.PasswordFor(u => u.Password, new { required = "required" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(u => u.Password2, "Passwort bitte wiederholen:* ")</td>
                    <td>@Html.PasswordFor(u => u.Password2, new { required = "required" })</td>
                </tr>




                <tr>
                    <td colspan="2" , style="text-align: center">
                        <input type="submit" value="absenden" id="btnSubmit" />
                        <input type="reset" value="abbrechen" id="btnReset" />
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2">* sind Pflichtfelder</td>
                </tr>
            </tfoot>
        </table>
    </div>

   
}

