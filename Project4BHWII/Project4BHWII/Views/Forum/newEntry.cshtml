@model  Project4BHWII.Models.Entry
@using Project4BHWII.Models
@{
    ViewBag.Title = "Entry";
}
@using (Html.BeginForm())
{
<table align="center" class="ForumsEntry">
    <thead>
        <tr id="EntryHead">
            <td colspan="2"> neuer Post</td>
        </tr>
    </thead>
    <tbody>
        <tr>
        <td>
            Username:
        </td>
            @{
                User user = Session["loggedinUser"] as User;
                if (user != null)
                {
                    <td>
                        @user.Username
                    </td>
                }
                else
                {
                    <td>
                        GastUser
                    </td>
                }
            }
        </tr>
        <tr>
            <td>Titel:</td>
            <td>@Html.TextBoxFor(u => u.Titel, new { required = "required" })</td>
        </tr>
        <tr>
            <td colspan="2">@Html.TextAreaFor(u => u.EntryText, new { required = "required" })</td>
        </tr>
        <td colspan="2" , style="text-align: center">
            <input type="submit" value="Posten" id="btnSubmit" class="btn bg-secondary"/>
            <a href="@Url.Action("Index", "Home")" class="btn bg-secondary">abbrechen</a>
        </td>
    </tbody>
</table>
}